#include <iostream>
using namespace std;
struct calculator {
	float a, b;
	float plus() {
		return a + b;
	}
	float minus() {
		return a - b;
	}
	float division() {
		return a / b;
	}
	float multiplication() {
		return a * b;
	}

};
int main()
{
	float a;
	float b;
	int n;
	cout << "Enter a" << endl;
	cin >> a;
	cout << "Enter b" << endl;
	cin >> b;
	cout << "Chose your operation \n 0:+ \n 1:- \n 2:/ \n 3:*" << endl;
	cin >> n;
	calculator calc;
	calc.a = a;
	calc.b = b;
	float arr[4];
	arr[0] = calc.plus();
	arr[1] = calc.minus();
	arr[2] = calc.division();
	arr[3] = calc.multiplication();
	cout << arr[n];
}
